{
  "name": "parcel-inferno",
  "license": "MIT",
  "scripts": {
    "build": "parcel build app/index.html --no-source-maps --public-url .",
    "rebuild": "rm -rf .clean dist && yarn build --no-cache",
    "serve": "parcel app/index.html --open",
    "lint": "eslint app/**/*.js*",
    "prettify": "prettier --write app/**/*.js*",
    "esw": "esw ./app --ext .js --ext .vue -w --color --clear",
    "test": "jasmine",
    "e2e": "cypress run -C false --config video=false,integrationFolder=app,supportFile=false,pluginsFile=false,testFiles=**/*.spec.js"
  },
  "dependencies": {
    "inferno": "^7.4.11"
  },
  "devDependencies": {
    "@babel/core": "^7.17.5",
    "@babel/plugin-transform-runtime": "^7.17.0",
    "@babel/preset-env": "^7.13.8",
    "babel-plugin-inferno": "^6.3.0",
    "parcel": "^1.12.4",
    "parcel-plugin-compress": "^2.0.2",
    "parcel-plugin-inliner": "^1.0.16",
    "postcss-remove-unused-css": "^1.0.4"
  },
  "optionalDependencies": {
    "babel-eslint": "^10.1.0",
    "cypress": "^9.5.1",
    "eslint": "^8.10.0",
    "eslint-config-prettier": "^8.4.0",
    "eslint-friendly-formatter": "^4.0.1",
    "eslint-plugin-html": "^6.2.0",
    "eslint-plugin-import": "^2.25.4",
    "eslint-plugin-no-loops": "^0.3.0",
    "eslint-plugin-prettier": "^4.0.0",
    "eslint-plugin-promise": "^6.0.0",
    "eslint-plugin-react": "^7.29.2",
    "eslint-watch": "^8.0.0",
    "husky": "^7.0.4",
    "jasmine": "^4.0.2",
    "lint-staged": "^12.3.4",
    "prettier": "^2.5.1"
  },
  "babel": {
    "presets": [
      "@babel/env"
    ],
    "plugins": [
      "@babel/plugin-transform-runtime",
      "inferno"
    ]
  },
  "browserslist": [
    "> 0.6%",
    "not ie 11",
    "not op_mini all"
  ],
  "postcss": {
    "plugins": {
      "autoprefixer": {},
      "postcss-remove-unused-css": {
        "path": "./app",
        "exts": [
          ".js",
          ".svelte",
          ".html"
        ]
      }
    }
  },
  "eslintConfig": {
    "ignorePatterns": [
      "**/*.spec.js",
      "node_modules/"
    ],
    "extends": [
      "eslint:recommended",
      "plugin:promise/recommended",
      "plugin:react/recommended",
      "plugin:prettier/recommended"
    ],
    "plugins": [
      "prettier",
      "promise",
      "no-loops"
    ],
    "parserOptions": {
      "parser": "babel-eslint",
      "ecmaVersion": 6,
      "sourceType": "module",
      "ecmaFeatures": {
        "modules": true,
        "jsx": true
      }
    },
    "globals": {
      "document": true
    },
    "settings": {
      "react": {
        "pragma": "m"
      }
    },
    "rules": {
      "max-len": [
        "error",
        {
          "code": 80
        }
      ],
      "quotes": [
        "error",
        "double"
      ],
      "promise/prefer-await-to-callbacks": "error",
      "promise/prefer-await-to-then": "error",
      "no-loops/no-loops": 2,
      "react/no-deprecated": "off"
    }
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged"
    }
  },
  "lint-staged": {
    "*.{js,jsx,ts,css,json,md,vue}": [
      "prettier --write",
      "git add"
    ]
  }
}
